<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/">
	<channel>
		<title>{{{site.name}}}</title>
		<description>{{#if site.description}}{{{site.description}}}{{/if}}</description>		
		<sy:updatePeriod>{{site.feed_update_period}}</sy:updatePeriod>
		<sy:updateFrequency>{{site.feed_update_frequency}}</sy:updateFrequency>
		<link>{{site.url}}</link>
		<atom:link href="{{site.url}}/{{path}}" rel="self" type="application/rss+xml" />
		<!--<lastBuildDate>{{date}}</lastBuildDate>-->
		{{#each collections.articles}}
			<item>
				<title>{{{title}}}</title>
				<dc:creator>{{{author}}}</dc:creator>
                <description>{{{description}}}</description>
                <description>{{content}}</description>
				<pubDate>{{publishedDate}}</pubDate>
				<link>{{@root.site.url}}/{{path}}</link>
				<guid isPermaLink="true">{{@root.site.url}}/{{post.url}}</guid>
			</item>
		{{/each}}
	</channel>
</rss>